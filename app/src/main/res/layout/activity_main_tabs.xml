<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header with everything in one compact bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#075E54"
        android:padding="6dp"
        android:gravity="center_vertical">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WhatsBerry"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginRight="4dp"/>

        <!-- Status -->
        <TextView
            android:id="@+id/tvConnectionStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Connected"
            android:textSize="9sp"
            android:textColor="#B2DFDB"
            android:layout_marginRight="4dp"/>

        <!-- Chats Button -->
        <Button
            android:id="@+id/btnChatsTab"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="Chats"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_marginRight="2dp"/>

        <!-- Contacts Button -->
        <Button
            android:id="@+id/btnContactsTab"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="Contacts"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_marginRight="2dp"/>

        <!-- Menu Button -->
        <Button
            android:id="@+id/btnMenuMain"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="Menu"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"/>
    </LinearLayout>

    <!-- Content area (Chats or Contacts) -->
    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Chats View -->
        <LinearLayout
            android:id="@+id/tabChats"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <EditText
                android:id="@+id/etSearchChats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search chats..."
                android:inputType="text"
                android:padding="8dp"
                android:layout_margin="6dp"
                android:background="#F5F5F5"
                android:textSize="14sp"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:drawablePadding="6dp"/>

            <TextView
                android:id="@+id/tvEmptyChats"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No chats yet.\nStart a conversation!"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#999999"
                android:visibility="gone"/>

            <ListView
                android:id="@+id/lvChats"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#E0E0E0"
                android:dividerHeight="1dp"/>
        </LinearLayout>

        <!-- Contacts View -->
        <LinearLayout
            android:id="@+id/tabContacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/etSearchContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search contacts..."
                android:inputType="text"
                android:padding="8dp"
                android:layout_margin="6dp"
                android:background="#F5F5F5"
                android:textSize="14sp"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:drawablePadding="6dp"/>

            <TextView
                android:id="@+id/tvEmptyContacts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No contacts found.\nAdd contacts on WhatsApp first."
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#999999"
                android:visibility="gone"/>

            <ListView
                android:id="@+id/lvContacts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#E0E0E0"
                android:dividerHeight="1dp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
