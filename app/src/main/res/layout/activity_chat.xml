<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#075E54"
        android:layout_alignParentTop="true">

        <!-- Contact name row with Clear button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvContactName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contact Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <!-- Clear conversation button -->
            <Button
                android:id="@+id/btnClearConversation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="?android:attr/selectableItemBackground"
                android:padding="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTypingIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="escribiendo..."
            android:textSize="12sp"
            android:textColor="#B2DFDB"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Messages List -->
    <ListView
        android:id="@+id/lvMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/attachmentMenuContainer"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ECE5DD"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"/>

    <!-- Attachment Menu (Expandable) -->
    <LinearLayout
        android:id="@+id/attachmentMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/inputArea"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:visibility="gone">

        <!-- Attachment Menu Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Row 1: Gallery, Camera, Location, Contact -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/attachGallery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="ðŸ“·"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:background="#9575CD"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gallery"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/attachCamera"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="ðŸ“·"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:background="#EF5350"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Camera"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/attachLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="ðŸ“"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:background="#66BB6A"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/attachContact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="ðŸ‘¤"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:background="#29B6F6"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2: Document, Audio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/attachDocument"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="ðŸ“„"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:background="#42A5F5"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Document"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/attachAudio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="ðŸŽ¤"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:background="#FF7043"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Audio"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Empty spaces to maintain grid alignment -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Input Area -->
    <LinearLayout
        android:id="@+id/inputArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#F0F0F0"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">

        <!-- Emoji Button -->
        <Button
            android:id="@+id/btnEmoji"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸ˜Š"
            android:textSize="20sp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="0dp"
            android:layout_marginRight="4dp"/>

        <!-- Message Input Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Type a message..."
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="4"
                android:padding="8dp"
                android:background="@android:color/transparent"
                android:textSize="16sp"/>

            <!-- Attach Button -->
            <Button
                android:id="@+id/btnAttach"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="ðŸ“Ž"
                android:textSize="16sp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="0dp"/>
        </LinearLayout>

        <!-- Camera Shortcut -->
        <Button
            android:id="@+id/btnCameraShortcut"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸ“·"
            android:textSize="20sp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <!-- Audio/Send Button (toggles based on text) -->
        <Button
            android:id="@+id/btnAudioOrSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="ðŸŽ¤"
            android:textSize="24sp"
            android:background="#25D366"
            android:textColor="#FFFFFF"
            android:padding="0dp"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>

    <!-- Audio Recording Overlay (hidden by default) -->
    <LinearLayout
        android:id="@+id/audioRecordingOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#E53935"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvRecordingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginRight="16dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â—€ Slide to cancel"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:alpha="0.8"/>

        <Button
            android:id="@+id/btnCancelRecording"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="âœ•"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="?android:attr/selectableItemBackground"
            android:padding="0dp"
            android:layout_marginRight="8dp"/>

        <Button
            android:id="@+id/btnSendRecording"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="âœ“"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="?android:attr/selectableItemBackground"
            android:padding="0dp"/>
    </LinearLayout>
</RelativeLayout>
